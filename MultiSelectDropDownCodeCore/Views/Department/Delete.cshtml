@model MultiSelectDropDownCodeCore.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-4 rounded rounded-3 p-4">
            <h5 class="text-center text-info "> Department detail Of @Model.DepartmentId</h5>
            <p class="text-center text-danger">Are You Sure,You Want To Delete This Department Recard</p>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DepartmentId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DepartmentId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="DepartmentId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a class="btn btn-secondary float-end" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
